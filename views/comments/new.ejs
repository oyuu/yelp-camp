<% include ../partials/header %>
<div class="container">
  <div class="text-center">
    <h1>Create a new comment for <%= campground.name %></h1>
  </div>
  <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
    <div class="mx-auto w-50">
      <div class="form-group">
        <input
          type="text"
          name="comment[text]"
          placeholder="text"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          name="comment[author]"
          placeholder="author"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block">Submit</button>
      </div>
      <a href="/campgrounds" class="">Go back</a>
    </div>
  </form>
</div>
<% include ../partials/footer %>
