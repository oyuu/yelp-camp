<% include ../partials/header %>
  <div class="text-center">
    <h1>Edit <%= campground.name %></h1>
  </div>
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="mx-auto w-50">
      <div class="form-group">
        <input
          type="text"
          name="campground[name]"
          value="<%= campground.name %>"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <input
          type="number"
          name="campground[price]"
          value="<%= campground.price %>"
          min=1
          class="form-control"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          name="campground[image]"
          value="<%= campground.image %>"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <textarea name="campground[description]" class="form-control" rows="5"><%= campground.description %></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block">Submit</button>
      </div>
      <a href="/campgrounds/<%= campground._id %>" class="">Go back</a>
    </div>
  </form>
<% include ../partials/footer %>